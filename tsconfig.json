{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts", "*.ts", "../types.d.ts"],
	"exclude": ["node_modules"]
}
